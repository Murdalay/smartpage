.column {
	width: 280px;
	position: relative;
	float: left;
	padding: 0;
	padding-right: 20px;
}

.column_double  .column {
	padding-right: 20px;
}

.column  .column_last {
	padding-right: 0;
}

.column_double {
	width: 580px;
}

.column_triple {
	width: 900px;
	padding-right: 0;
}

.column_right {
	float: right;
}

.column_align_right {
	text-align: right;
	padding-right: 0;
}


@media (max-width: 767px) {
	.column, .column_double, .column_triple, .column_right  {
		top: none;
		float: none;
		padding-left: 0;
		width: 100%;
	}
}
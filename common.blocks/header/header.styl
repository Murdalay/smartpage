.header {
	font-family: Montserrat;
	
	padding-bottom: 3px;
	padding-top: 0px;
	width: 100%;
	top: 0;
	left: 0;
	color: #eee;
	position: fixed;
	z-index: 10;
}


.header_admin .content-wrapper {
	max-width: none;
	width: 95%;
	margin-left: auto;
	margin-right: auto;
	left: 0;
	right: 0;
}


@media (max-width: 900px) {
	.header {
		height: auto;
		min-height: 60px;
		padding-bottom: 5px;
		padding-top: 0;
		width: 100%;
		top: auto;
		left: auto;
		color: #eee;
		position: relative;
	}
}

.inner-wrapper {
	top: 130px;
	bottom: 35px;
	max-width: 940px;
	width: 100%;
	position: fixed;
	z-index: 2;
	background-color: rgba(250, 250, 250, 0.65);
	padding: 25px;
	border-radius: 5px;
	border-bottom: 1px solid #e6e6e6;
	box-shadow: rgba(0, 0, 0, 0.2) 13px 13px 27px -4px;
}


.scroller {
	overflow-y: scroll;
	padding-left: 20px;
	padding-right: 20px;
	padding-bottom: 10px;
	max-height: calc(100vh - 315px);
	height: 100%;
}


@media (max-width: 991px) {
	.inner-wrapper {
		top: auto;
		bottom: auto;
		width: auto;
		position: relative;
		z-index: 2;
		background-color: rgba(250, 250, 250, 0.65);
		padding: 15px;
		border-radius: 0;
		border: 0 solid #e6e6e6;
		box-shadow: none;
	}

	.scroller {
		overflow-y: scroll;
		padding-left: 0;
		padding-right: 0;
		max-height: auto;
	}
}
.inner-wrapper {
	top: 130px;
	height: 100%;
	position: relative;
	z-index: 2;
	background-color: rgba(250, 250, 250, 0.65);
	padding: 25px;
	border-radius: 5px;
	border-bottom: 1px solid #e6e6e6;
	box-shadow: rgba(0, 0, 0, 0.2) 13px 13px 27px -4px;
	min-height: 200px;
	padding-left: 40px;
	padding-right: 40px;
	max-height: calc(100vh - 210px);
	overflow: hidden;
}


.scroller {
	overflow-y: scroll;
	max-height: calc(100vh - 300px);
	height: 100%;
}
